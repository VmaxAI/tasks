+ def split_into_sentences(text):
+     """
+     Split the given text into a list of sentences.
+    
+     Args:
+         text: A string containing one or more sentences
+        
+     Returns:
+         A list of strings, where each string is a sentence
+     """
+     import re
+    
+     if not text or not text.strip():
+         return []
+    
+     # Common abbreviations that shouldn't trigger sentence splits
+     abbreviations = ['Mr', 'Mrs', 'Ms', 'Dr', 'Prof', 'Sr', 'Jr', 'vs', 'etc', 'Inc', 'Ltd', 'Co']
+    
+     # Replace abbreviations temporarily to avoid splitting on them
+     temp_text = text
+     placeholders = {}
+     for i, abbr in enumerate(abbreviations):
+         placeholder = f"<<<ABB{i}>>>"
+         # Match abbreviation with period (case insensitive)
+         pattern = re.compile(r'\b' + abbr + r'\.', re.IGNORECASE)
+         temp_text = pattern.sub(placeholder, temp_text)
+         placeholders[placeholder] = abbr + '.'
+    
+     # Split on sentence-ending punctuation (.!?) followed by whitespace
+     # Use a pattern that captures the punctuation
+     sentences = re.split(r'([.!?])\s+', temp_text)
+    
+     # Reconstruct sentences with their punctuation
+     result = []
+     i = 0
+     while i < len(sentences):
+         if i + 1 < len(sentences) and sentences[i + 1] in '.!?':
+             # This is a sentence followed by its punctuation
+             sentence = sentences[i] + sentences[i + 1]
+             i += 2
+         else:
+             # This is either the last sentence or a sentence without captured punctuation
+             sentence = sentences[i]
+             i += 1
+        
