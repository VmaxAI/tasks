+ def find_max_subarray_sum(arr):
+     """
+     Find the maximum sum of a contiguous subarray using Kadane's algorithm.
+    
+     Args:
+         arr: List of integers
+        
+     Returns:
+         Maximum sum of contiguous subarray
+     """
+     if not arr:
