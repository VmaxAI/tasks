+def find_min_rotated_array(arr):
+    """
+    Finds the minimum element in a rotated sorted array.
+    
+    Args:
+        arr: A rotated sorted array with unique elements
+        
+    Returns:
+        The minimum element in the array
+        
+    Examples:
+        >>> find_min_rotated_array([4, 5, 6, 7, 0, 1, 2])
+        0
+        >>> find_min_rotated_array([3, 4, 5, 1, 2])
+        1
+        >>> find_min_rotated_array([1])
+        1
+    """
+    if not arr:
+        return None
+    
+    left = 0
+    right = len(arr) - 1
+    
+    # If array is not rotated or has only one element
+    if arr[left] <= arr[right]:
+        return arr[left]
+    
+    while left < right:
+        mid = (left + right) // 2
+        
+        # If mid element is greater than rightmost element,
+        # minimum must be in the right half
+        if arr[mid] > arr[right]:
+            left = mid + 1
+        else:
+            # Minimum is in the left half (including mid)
+            right = mid
+    
+    return arr[left]
